<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"     android:layout_width="match_parent"     android:layout_height="match_parent"> 
 
    <TextView 
        android:layout_width="107dp"         android:layout_height="52dp"         android:layout_alignParentTop="true"         android:layout_alignParentEnd="true"         android:layout_centerHorizontal="true"         android:layout_marginTop="16dp"         android:layout_marginEnd="151dp"         android:text="@string/login2"         android:textAlignment="center"         android:textColor="@color/black"         android:textSize="30sp" /> 
 
    <EditText 
        android:id="@+id/user"         android:layout_width="224dp"         android:layout_height="wrap_content"         android:layout_alignParentStart="true"         android:layout_alignParentTop="true"         android:layout_centerHorizontal="true"         android:layout_marginStart="98dp"         android:layout_marginTop="128dp"         android:hint="@string/enter_username2"         android:textColorHint="@color/black"         android:textAlignment="center"         android:textColor="@color/black" /> 
 
    <EditText 
 
        android:id="@+id/pass"         android:layout_width="226dp"         android:layout_height="wrap_content"         android:layout_alignParentStart="true"         android:layout_alignParentTop="true"         android:layout_centerHorizontal="true"         android:layout_marginStart="97dp"         android:layout_marginTop="203dp" 
        android:textColorHint="@color/black"         android:hint="@string/enter_password2"         android:textAlignment="center"         android:textColor="@color/black" /> 
     <Button 
        android:id="@+id/btnLogin"         android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:layout_alignParentEnd="true"         android:layout_alignParentBottom="true"         android:layout_centerHorizontal="true"         android:layout_marginEnd="154dp"         android:layout_marginBottom="339dp"         android:text="@string/loginbtn" /> 
 
 
</RelativeLayout> 
